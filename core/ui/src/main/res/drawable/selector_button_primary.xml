<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <padding android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <solid android:color="@color/color_interactive_control" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <padding android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <solid android:color="@color/color_interactive_control" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <padding android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <corners android:radius="10dp" />
            <solid android:color="@color/color_interactive_control" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <corners android:radius="10dp" />
            <solid android:color="#EBFBCC" />
        </shape>
    </item>
</selector>