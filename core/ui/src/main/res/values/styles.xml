<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Widget styles. Only. -->
    <!--Layout dimensions / Padding/margin / Background color/drawable /Elevation /Shape/corner radius / Animation/state properties / Tint/color state lists/ Component-specific visual properties-->
    <style name="Widget.InDrive.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
    </style>

    <style name="Widget.InDrive.TextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text.Title</item>
    </style>

    <style name="Widget.InDrive.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:maxLength">4</item>
        <item name="android:textSize">22sp</item>
        <item name="android:itemBackground">@drawable/selector_pin_item</item>
        <item name="cursorColor">@color/color_pin_view_cursor</item>
        <item name="android:textColor">@color/color_pin_view_text</item>
        <item name="lineColor">@android:color/transparent</item>
        <item name="itemRadius">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandle">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleLeft">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleRight">@drawable/pv_invisible_image</item>
    </style>
    
    <style name="Widget.InDrive.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.PrimaryButton</item>
    </style>

    <style name="Widget.InDrive.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:padding">@dimen/small_125</item>
        <item name="android:background">@drawable/selector_edit_text_auth</item>
        <item name="android:textColorHint">@color/color_tertiary</item>
    </style>

    <style name="MyBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
        <item name="bottomSheetDragHandleStyle">@style/Widget.Material3.BottomSheet.DragHandle</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/color_error_crouton</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">0.3</item>
    </style>

</resources>