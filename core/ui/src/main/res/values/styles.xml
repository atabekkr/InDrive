        <item name="android:textSize">22sp</item>
        <item name="android:itemBackground">@drawable/selector_pin_view_bg</item>
        <item name="cursorColor">@drawable/selector_pin_view_cursor</item>
        <item name="android:textColor">@drawable/selector_pin_view_text</item>
