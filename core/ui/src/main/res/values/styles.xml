<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Widget styles. Only. -->
    <!--Layout dimensions / Padding/margin / Background color/drawable /Elevation /Shape/corner radius / Animation/state properties / Tint/color state lists/ Component-specific visual properties-->
    <style name="Widget.InDrive.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
    </style>

    <style name="Widget.InDrive.TextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text.Title</item>
    </style>

    <style name="Widget.InDrive.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:maxLength">4</item>
        <item name="android:textSize">22sp</item>
        <item name="android:itemBackground">@drawable/selector_pin_item</item>
        <item name="cursorColor">@color/color_pin_view_cursor</item>
        <item name="android:textColor">@color/color_pin_view_text</item>
        <item name="lineColor">@android:color/transparent</item>
        <item name="itemRadius">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandle">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleLeft">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleRight">@drawable/pv_invisible_image</item>
    </style>

    <style name="Widget.InDrive.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.PrimaryButton</item>
    </style>

    <style name="Widget.InDrive.Slider.Tooltip" parent="android:Widget">
        <item name="android:layout_margin">8dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="backgroundTint">@color/color_content_secondary</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
        <item name="shapeAppearance">@style/ShapeAppearance.InDrive.Slider.Tooltip</item>
    </style>

    <style name="Widget.InDrive.Slider" parent="android:Widget">
        <item name="haloColor">@color/color_interactive_accent</item>
        <item name="haloRadius">24dp</item>
        <item name="labelStyle">@style/Widget.InDrive.Slider.Tooltip</item>
        <item name="thumbColor">@color/color_interactive_accent</item>
        <item name="thumbElevation">1dp</item>
        <item name="thumbRadius">10dp</item>
        <item name="tickColorActive">@color/color_interactive_accent</item>
        <item name="tickColorInactive">@color/color_interactive_accent</item>
        <item name="tickRadiusActive">1dp</item>
        <item name="tickRadiusInactive">1dp</item>
        <item name="trackColorActive">@color/color_interactive_accent</item>
        <item name="trackColorInactive">@color/color_interactive_accent</item>
        <item name="trackHeight">4dp</item>
        <item name="minSeparation">0dp</item>
        <item name="trackInsideCornerSize">2dp</item>
        <item name="thumbWidth">4dp</item>
        <item name="thumbHeight">44dp</item>
        <item name="thumbTrackGapSize">6dp</item>
        <item name="trackStopIndicatorSize">4dp</item>
    </style>

    <style name="Widget.InDrive.Button.Variant" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_primary_variant</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.PrimaryButton.Variant</item>
    </style>

    <style name="Widget.InDrive.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:padding">@dimen/small_125</item>
        <item name="android:background">@drawable/selector_edit_text_auth</item>
        <item name="android:textColorHint">@color/color_tertiary</item>
    </style>

    <style name="Widget.InDrive.EditText.NoSelector" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.Text</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:padding">@dimen/small_125</item>
        <item name="android:background">@drawable/selector_edit_text_auth</item>
        <item name="android:textColorHint">@color/color_tertiary</item>
    </style>

    <style name="MyBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:textAppearance">@style/TextAppearance.InDrive.BodyLarge</item>
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="bottomSheetDragHandleStyle">@style/Widget.InDrive.BottomSheet.DragHandle</item>
    </style>

    <style name="Widget.InDrive.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/color_gray_1</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@color/color_success_crouton</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="background">@drawable/bg_bottom_sheet</item>
        <item name="behavior_peekHeight">100dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_draggable">true</item>
    </style>

    <style name="TransparentFragment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    
    <style name="Widget.InDrive.Radio.Button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.BodyLarge</item>
    </style>

</resources>