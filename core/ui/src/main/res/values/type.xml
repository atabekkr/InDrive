<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TextAppearances, text size dimensions-->
    <!--Only android:textSize/android:textColor/android:textStyle (bold, italc) /android:fontFamily /android:letterSpacing /android:lineSpacingMultiplier/ android:textAllCaps-->
    <style name="TextAppearance.InDrive.Text" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.InDrive.Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.InDrive.PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>