<resources>
    <!-- Only Themes and ThemeOverlays -->

    <style name="Base.V24.Theme.InDrive" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Version-specific base configurations -->
    </style>

    <style name="Base.Theme.InDrive" parent="Base.V24.Theme.InDrive">
        <!-- Application-wide theme configurations -->

        <item name="android:textViewStyle">@style/Widget.InDrive.TextView</item>
        <item name="android:buttonStyle">@style/Widget.InDrive.Button.Primary</item>
        <item name="android:radioButtonStyle">@style/Widget.InDrive.Radio.Button</item>
        <item name="editTextStyle">@style/Widget.InDrive.EditText</item>
    </style>

    <style name="Theme.InDrive" parent="Base.Theme.InDrive">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.InDrive.BottomSheetDialog</item>
    </style>

    <style name="Theme.InDrive.Splash" parent="Base.Theme.InDrive">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    
    <style name="Theme.InDrive.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyBottomSheetStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.InDrive.BodyLarge</item>
        <item name="editTextBackground">@drawable/selector_edit_text_auth</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>

    </style>


    <!-- Splash theme configurations -->


    <!-- Final theme -->
</resources>