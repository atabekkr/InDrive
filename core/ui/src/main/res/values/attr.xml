<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressButton">
        <attr name="progressButtonText" format="string" />
        <attr name="textAppearance" format="reference"/>
        <attr name="enableTapToStop" format="boolean"/>
        <attr name="buttonEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="itemCount" format="integer" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemRadius" format="dimension" />
        <attr name="itemSpacing" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="reference|color" />
        <attr name="viewType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="line" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="android:cursorVisible" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="reference|color" />
        <attr name="android:itemBackground" />
        <attr name="hideLineWhenFilled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PinViewTheme">
        <attr name="pinViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="EndTextEditText">
        <attr name="startIconDrawable" format="reference" />
        <attr name="endText" format="string" />
        <attr name="endTextVisible" format="boolean"/>
        <attr name="android:hint" format="string" />
        <attr name="hintTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EndIconEditText">
        <attr name="icon" format="reference"/>
        <attr name="iconTint" format="color"/>
        <attr name="hint" format="string"/>
        <attr name="fieldTextAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ProgressiveButton">
        <attr name="progressiveButtonText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="duration" format="integer"/>
        <attr name="progressColor" format="color"/>
        <attr name="buttonColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SlideFinishButton">
        <attr name="slideFinishButtonText" format="string" />
    </declare-styleable>

    <declare-styleable name="SlideButton">
        <attr name="SlideButtonText" format="string"/>
        <attr name="SlideButtonTextSize" format="dimension"/>
        <attr name="SlideButtonTextColor" format="integer"/>
        <attr name="thumbOffset" format="dimension"/>
        <attr name="thumb" format="integer"/>
        <attr name="sliderBackground" format="integer"/>
    </declare-styleable>

</resources>