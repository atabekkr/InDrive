<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_small">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        style="@style/Widget.InDrive.BottomSheet.DragHandle"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:padding="0dp"
        android:paddingBottom="0dp" />

    <LinearLayout
        android:id="@+id/layout_cash"
        android:layout_width="match_parent"
        android:foreground="@drawable/ripple_text"
        android:padding="@dimen/padding_small"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:paddingHorizontal="@dimen/padding_small"
            android:src="@drawable/ic_cash" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Naq pul"
            android:textAppearance="@style/TextAppearance.InDrive.BodyLarge" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_online"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_small"
        android:foreground="@drawable/ripple_text"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:paddingHorizontal="@dimen/padding_small"
            android:src="@drawable/ic_credit_card_3d" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Onlayn pul Ã³tkeriw"
            android:textAppearance="@style/TextAppearance.InDrive.BodyLarge" />

    </LinearLayout>

</LinearLayout>