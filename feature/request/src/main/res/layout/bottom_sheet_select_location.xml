<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextAppearance.InDrive.Text.Title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Alıp ketiw ornı"/>

    <include
        android:id="@+id/item_select_location"
        layout="@layout/location_item"
        />
    
    <Button
        style="@style/TextAppearance.InDrive.PrimaryButton"
        android:layout_margin="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belgilew"/>

</LinearLayout>