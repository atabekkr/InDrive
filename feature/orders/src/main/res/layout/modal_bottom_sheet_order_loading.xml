<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        style="@style/Widget.InDrive.BottomSheet.DragHandle"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:padding="0dp"
        android:paddingBottom="0dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicatorColor="@color/color_interactive_accent"
        android:layout_margin="@dimen/margin_small"
        android:indeterminate="true"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14 000 som usınısıńız jolawshı tárepinen kórip shıǵılıp atır…"
        android:textAppearance="@style/TextAppearance.InDrive.Text.Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.InDrive.TitleGroup"
        android:text="10 sekund ishinde jolawshı qabıllamasa, qaytadan usınıs jiberiwińiz múmkin."/>

</LinearLayout>