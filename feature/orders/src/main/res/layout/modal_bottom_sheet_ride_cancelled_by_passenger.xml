<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        style="@style/Widget.InDrive.BottomSheet.DragHandle"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:padding="0dp"
        android:paddingBottom="0dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_success_icon"
        android:src="@drawable/im_warning"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sapar biykarlandı"
        android:gravity="center"
        android:textSize="26sp"
        android:textAppearance="@style/TextAppearance.InDrive.Text.Title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sapar jolawshı tárepinen biykarlandı"
        android:gravity="center"

        android:textColor="@color/color_content_secondary"
        android:textAppearance="@style/TextAppearance.InDrive.TitleGroup"/>

    <Button
        android:id="@+id/btn_understand"
        style="@style/Widget.InDrive.Button.Primary"
        android:layout_width="match_parent"
        android:text="Túsinikli"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>