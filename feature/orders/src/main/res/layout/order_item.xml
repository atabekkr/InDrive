<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_small"
    android:padding="@dimen/padding_small"
    android:background="@drawable/shape_item_order"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.InDrive.BodyLarge.SemiBold"
                    android:textSize="14sp"
                    tools:text="Basd" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:textColor="@color/color_interactive_accent"
                    android:visibility="gone"
                    tools:text="4.8 ★" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.InDrive.TitleSmall"
                tools:text="600 m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="11 000 som"
                android:textAppearance="@style/TextAppearance.InDrive.BodyLarge" />

            <TextView
                android:id="@+id/tv_distance_road"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="5 km"
                android:textAppearance="@style/TextAppearance.InDrive.TitleSmall" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_payment_method"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:src="@drawable/ic_cash"
            tools:text="4 min" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:src="@drawable/bg_pick_up" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pick_up_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.InDrive.BodyLarge"
                android:textSize="16sp"
                tools:text="T. Qayıpbergenov kóshesi, 3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_pick_up_location"
                android:textAppearance="@style/TextAppearance.InDrive.TitleSmall" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
